@using Graduation_Project.ViewModels;
@model IEnumerable<ProductViewModel>

@{
    ViewData["Title"] = "Home Page";
}


<div class="container pb-5 mt-3">

    <div class="row">
		<div class="col-md-3">
            @await Component.InvokeAsync("Categories")
        </div>
        <div class="col-md-9">
            @if (TempData["InShopping"]!= null)
            {
                <div class="alert alert-danger" role="alert">
                    <i class="bi bi-exclamation-circle-fill"></i>
                    @TempData["InShopping"]
                </div>
            }
            @if (Model.Count() == 0)
            {
                if (ViewBag.dataFilter != null)
                {
                    <div class="alert alert-warning" role="alert">
                        <i class="bi bi-exclamation-circle-fill"></i>
                        Bu aramaya ait bir ürün bulunamadı
                    </div>   
                }
                else
                {
                    <div class="alert alert-warning" role="alert">
                        <i class="bi bi-exclamation-circle-fill"></i>
                        Bu kategoriye ait bir ürün bulunamadı
                    </div>
                }                        
            }
            else
            {
                if (ViewBag.dataFilter != null)
                {
                    <div class="alert alert-warning" role="alert">
                        <i class="bi bi-check-circle-fill"></i>
                        Bu aramaya ait <strong>@Model.Count() adet </strong> ürün bulundu.
                    </div>
                }
                else
                {
                    <div class="alert alert-warning" role="alert">
                        <i class="bi bi-check-circle-fill"></i>
                        Bu kategoriye ait <strong>@Model.Count() adet </strong> ürün bulundu.
                    </div>
                }
               
            }
            <partial name="_ProductListPartialView" />

        </div>
    </div>
</div>

<partial name="_NewItemPartialView" />






