@using Entity;
@using Graduation_Project.ViewModels;
@model CategoryViewModel
@{
    ViewData["Title"] = "AddCategory";
}
<h1>Kategori Ekle</h1>

<h4>Kategori</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddCategory">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CategoryName" class="control-label">Kategori Adı</label>
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Ekle" class="btn btn-primary mt-2" />
                <a class="btn btn-warning mt-2"  asp-action="Index">Geri Dön</a>
            </div>
        </form>
    </div>
</div>



