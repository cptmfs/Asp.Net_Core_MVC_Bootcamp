@using Entity;
@model Category

@{
    ViewData["Title"] = "Delete";
}

<h1>Kategori Silme</h1>

<h3>Bu kategoriyi silmek istediğinize eminmisiniz ? </h3>
<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <label asp-for="CategoryName" class="control-label">Kategori Adı</label>

        </dt>
        <dd class="col-sm-10">
            <input asp-for="CategoryName" class="form-control" />
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-warning">Geri Dön</a>
    </form>
</div>