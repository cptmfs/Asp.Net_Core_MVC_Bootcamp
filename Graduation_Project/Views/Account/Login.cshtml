@using Graduation_Project.ViewModels;
@model LoginViewModel
@{
	Layout = null;
}


<!DOCTYPE html>
<html>

<!-- Head -->
<head>

	<title>ShoppinCart.com - Login</title>

	<!-- Meta-Tags -->
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
	<script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
	<!-- //Meta-Tags -->

	<link href="~/register/css/popuo-box.css" rel="stylesheet" />
	<!-- Style -->
	<link href="~/register/css/style.css" rel="stylesheet" />
	<!-- Fonts -->
	<link href="//fonts.googleapis.com/css?family=Quicksand:300,400,500,700" rel="stylesheet">
	<!-- //Fonts -->

</head>
<!-- //Head -->
<!-- Body -->
<body>

	<h1>Shopping Cart Giriş Formu</h1>

	<div class="w3layoutscontaineragileits">
		<h2>Shopping Cart</h2>
		<form method="post">
			<input type="text" asp-for="Username" placeholder="Kullanıcı Adınız" required="">
			<input type="password" asp-for="Password" placeholder="Şifreniz" required="">
			<br /><br />
			<ul class="agileinfotickwthree">
				<li>
					<input type="checkbox" id="brand1" value="">
					<label for="brand1"><span></span>Kullanım Şartlarını Okudum</label>
					<a href="/Register/Index">Bir Hesabınız Yok mu?</a>
				</li>
			</ul>
			<div class="aitssendbuttonw3ls">
				<input type="submit" value="Giriş Yap">
				<p> Ana Sayfaya Dön <span>→</span> <a class="w3_play_icon1" href="#small-dialog1"> Shopping Cart</a></p>
				<div class="clear"></div>
			</div>
		</form>
	</div>

	<div class="w3footeragile">
		<p> &copy; @DateTime.Now.Year Shopping Cart Giriş Paneli. Tüm hakları saklıdır. | Design by <a href="http://captaindeveloper.com.tr" target="_blank">Muhammed Ferit Simsek</a></p>
	</div>


	<script src="~/register/js/jquery-2.1.4.min.js"></script>
	<!-- pop-up-box-js-file -->
	<script src="~/register/js/jquery.magnific-popup.js"></script>
	<!--//pop-up-box-js-file -->
	<script>
		$(document).ready(function () {
			$('.w3_play_icon,.w3_play_icon1,.w3_play_icon2').magnificPopup({
				type: 'inline',
				fixedContentPos: false,
				fixedBgPos: true,
				overflowY: 'auto',
				closeBtnInside: true,
				preloader: false,
				midClick: true,
				removalDelay: 300,
				mainClass: 'my-mfp-zoom-in'
			});

		});
	</script>

</body>
<!-- //Body -->

</html>
